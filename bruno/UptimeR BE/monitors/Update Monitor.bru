meta {
  name: Update Monitor
  type: http
  seq: 3
}

put {
  url: {{baseUrl}}/api/monitors/{{monitorId}}
  body: json
  auth: inherit
}

body:json {
  {
    "url": "{{monitorUrl}}",
    "label": "{{monitorLabel}} (updated)",
    "frequencyMinutes": {{monitorFrequency}}
  }
}

settings {
  encodeUrl: false
  timeout: 0
}
