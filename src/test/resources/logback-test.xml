<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress all logs from RestExceptionHandler during tests -->
    <!-- ERROR logs are expected when testing error handling scenarios -->
    <!-- Setting to OFF suppresses all logs from this class during tests -->
    <logger name="com.isofuture.uptime.controller.RestExceptionHandler" level="OFF"/>

    <!-- Default root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>

